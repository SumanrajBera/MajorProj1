<% if(success && success.length !==0) {%>
    <div class="alert alert-success alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% }else if(del && del.length !==0) { %>
        <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
            <%= del %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% }else if(error && error.length !==0) { %>
        <div class="alert alert-warning alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% } %>